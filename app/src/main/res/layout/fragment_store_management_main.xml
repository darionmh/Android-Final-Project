    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreManagementCategoriesFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
